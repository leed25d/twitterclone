<h1>Twitterclone Landing page</h1>
<% if logged_in? %>
  Welcome <%= current_user.username %>! Not you?
  <%= link_to "Log out", logout_path %><br /><br />
  <b><%= render :partial => "tweets/message_form" %></b><br /><br />

  <%= render :partial => "tweets/tweet", :collection => @tweets %>
  <%= render :partial => "follows/others" %>
  <%= render :partial => "follows/follows" %>

<% else %>
  <%= link_to "Sign up", signup_path %> or
  <%= link_to "log in", login_path %>.
<% end %>
